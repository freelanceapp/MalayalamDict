<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColorDark</item>
        <item name="android:color">@color/blackColor</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimaryDark" tools:targetApi="23">@color/blackColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
     <!--   <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/white</item>
         <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

    </style>




    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>
</resources>
